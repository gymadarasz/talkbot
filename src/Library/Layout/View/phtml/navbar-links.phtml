<li class="nav-item<?= $link['active'] ? ' active' : '' ?><?= $link['dropdown'] ? ' dropdown' : '' ?>">
    <a 
        class="nav-link<?= $link['dropdown'] ? ' dropdown-toggle' : '' ?><?= $link['disabled'] ? ' disabled' : '' ?>" 
        href="?<?= $link['href'] ?>"
