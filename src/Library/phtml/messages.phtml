<?php $this->restrict(); ?>

<?php
$bsalerts = [
    'error' => 'danger',
];
?>

<?php if ($messages): ?>
    <?php foreach (array_keys($messages) as $class): ?>
        <?php foreach ($messages[$class] as $message): ?>
            <div class="alert alert-<?= $bsalerts[$class] ?? $class ?>" role="alert">
                <?= $message ?>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        <?php endforeach ?>
    <?php endforeach ?>
<?php endif; ?>